{
	"name": "bakeryjs",
	"version": "1.0.0",
	"description": "FBP-inspired library",
	"main": "build/index",
	"types": "build/index",
	"dependencies": {
		"async": "^2.6.0",
		"lodash": "^4.13.1",
		"md5": "^2.2.1",
		"moment": "^2.22.1",
		"string-hash": "^1.1.3",
		"underscore": "^1.9.0",
		"util": "^0.10.3"
	},
	"engines": {
		"node": "8.9",
		"npm": "5.6"
	},
	"author": "lepik.milan@gmail.com",
	"license": "ISC",
	"devDependencies": {
		"@types/async": "^2.0.49",
		"@types/jest": "^23.1.3",
		"@types/node": "^10.5.0",
		"jest": "^23.1.0",
		"nodemon": "^1.17.5",
		"ts-jest": "^22.4.6",
		"ts-node": "^6.2.0",
		"typescript": "^2.9.2"
	},
	"scripts": {
		"start": "npm run build:live",
		"build:live": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts all",
		"build": "./node_modules/.bin/tsc --pretty",
		"test": "./node_modules/.bin/jest -i --colors"
	},
	"jest": {
		"roots": [
			"<rootDir>/tests",
			"<rootDir>/src"
		],
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"src/**/*.{js,ts}"
		],
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
