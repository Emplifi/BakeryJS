{
	"name": "bakeryjs",
	"version": "1.0.0",
	"description": "FBP-inspired library",
	"main": "build/index",
	"types": "build/index",
	"dependencies": {
		"async": "^2.6.0",
		"debug": "^3.1.0",
		"verror": "^1.10.0"
	},
	"engines": {
		"node": ">=8.11",
		"npm": ">=5.6"
	},
	"author": "lepik.milan@gmail.com",
	"license": "ISC",
	"devDependencies": {
		"@types/async": "^2.0.49",
		"@types/jest": "^23.1.5",
		"@types/node": "^10.5.2",
		"@types/verror": "^1.10.3",
		"eslint": "^5.1.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-jest": "^21.17.0",
		"eslint-plugin-prettier": "^2.6.2",
		"eslint-plugin-typescript": "^0.12.0",
		"jest": "^23.3.0",
		"nodemon": "^1.17.5",
		"prettier": "1.13.7",
		"ts-jest": "^22.4.6",
		"ts-node": "^6.2.0",
		"typedoc": "^0.11.1",
		"typescript": "^2.9.2",
		"typescript-eslint-parser": "^16.0.1"
	},
	"scripts": {
		"start": "npm run build:live",
		"build:live": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts all",
		"build": "tsc --pretty",
		"test": "jest",
		"lint": "eslint --ext .ts,.js src/ tests/",
		"doc": "typedoc --out ./Doc/ --target ES6 src/"
	},
	"jest": {
		"roots": [
			"<rootDir>/tests",
			"<rootDir>/src"
		],
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"src/**/*.{js,ts}"
		],
		"coverageReporters": [
			"html",
			"text"
		],
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
